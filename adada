-- Da Hood Mouse.Hit / Target bypass (universal for all executors)
if game.PlaceId == 2788229376 then
    local mt = getrawmetatable(game)
    setreadonly(mt, false)
    local old = mt.__index

    mt.__index = newcclosure(function(self, key)
        if not checkcaller() and self == game:GetService("Players").LocalPlayer:GetMouse() then
            if key == "Hit" then
                local target = GetClosestPlayer()
                if target then
                    local pos = PredictTargetPosition(target)
                    if pos then
                        return CFrame.new(pos)
                    end
                end
            elseif key == "Target" then
                local target = GetClosestPlayer()
                if target then
                    local pos = PredictTargetPosition(target)
                    if pos then
                        return CFrame.new(pos)
                    end
                end
            end
        end
        return old(self, key)
    end)

    setreadonly(mt, true)
end
